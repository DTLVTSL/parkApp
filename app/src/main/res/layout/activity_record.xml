<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.daniel.firebaseauth.RecordActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Benvenuto - Registra tua voce "
            android:layout_marginTop="20dp"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="60dp"
            app:srcCompat="@mipmap/voz"
            tools:layout_editor_absoluteX="150dp"
            tools:layout_editor_absoluteY="300dp" />


        <Button
            android:id="@+id/buttonSend"
            style="@style/Widget.AppCompat.SearchView.ActionBar"
            android:layout_width="wrap_content"
            android:layout_height="66dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="1dp"
            android:background="@android:drawable/presence_audio_busy"
            android:layout_weight="0.07" />

        <Button
            android:id="@+id/buttonLogout"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:background="@color/colorPrimary"
            android:elevation="13dp"
            android:stateListAnimator="@color/colorAccent"
            android:text="Logout"
            android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    </LinearLayout>


</RelativeLayout>
